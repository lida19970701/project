 <style>
    .outer{width:100%;margin: 0 auto;}
    /*瀑布流层*/
    .waterfall{
        -moz-column-count:4;
        -webkit-column-count:4;
        column-count:4;
        -moz-column-gap: 1em;
      -webkit-column-gap: 1em;
      column-gap: 1em;
    }
    .inner{
      padding: 1em;
      margin: 0 0 1em 0;
      -moz-page-break-inside: avoid;
      -webkit-column-break-inside: avoid;
      break-inside: avoid;
    }
    .inner img{
        width: 100%;
        margin-bottom:10px;
    }
   a:hover{
        text-decoration: underline;
        cursor:pointer;
        color:red;
    }
    .shopname{
      font-size: 2em
    }
    .goodsname{
      text-decoration: underline;
      font-size: 20px
    }
    </style>
</head>
<body>
    <div class="outer">
        <div class="waterfall">
          <%result.forEach(function(row){%>
            <div class="inner">
               <img src="<%-row._source.path%>">
                <div><p style="font-size: 2.5em;color: red">￥<%-row._source.price%></p></div>  
                <div class="goodsname"><a href=""><%-row._source.name%></a></div>            
                <div>
                  <p><a class='shopname' href=""><%-row._source.shopname%>旗舰店</a></p>
                </div>
                <div>
                  <p><img style="width: 50px" src="images/huibiao/remai.png" alt="">
                     <img style="width: 25px;" src="images/huibiao/tianmao.png" alt="">
                  </p>
                </div>
                
           </div>
            <%})%>
        </div>
    </div>